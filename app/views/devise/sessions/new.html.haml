.header
  .header__main
    .header__main__title
      = "Katze"
.wrapper
  .top
    %h6 アカウントをお持ちでない方はこちら
    .registration_link
      = link_to '新規会員登録', new_user_registration_path, class: 'registration_link__btn'
  .user_form
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        .field__label
          = f.label :メールアドレス
        .field__form
          = f.text_field :nickname, class: "field__form__input", placeholder: ""
      .field
        .field__label
          = f.label :パスワード
        .field__form
          = f.text_field :password, class: "field__form__input", placeholder: ""
